#!/bin/bash

MYPATH="$1"
export PATH="$(dirname $0):$PATH"

function derp {
    if [ -e "$MYPATH/.ctrlp_ignore" ]; then
        egrep -v "$(cat "$MYPATH/.ctrlp_ignore" | @ 'inp().strip().replace("\n", "")')"
    else
        cat
    fi;
}
timeout 3 find "$MYPATH" | grep -v "^$MYPATH"'$' | egrep -v "__pycache__|\.pyc$|\.so|htmlcov|\.git|\.class|\.sw.$" | derp
# | egrep -v "^.*(path1|path2|...).*$"
