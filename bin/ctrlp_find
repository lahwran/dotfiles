#!/bin/bash

MYPATH="$1"
export PATH="$(dirname $0):$PATH"
function log() {
    p="$1"
    shift
    logger -t ctrlp_find -p "user.$p" -- "[$$]" "$@"
}

log info Running from "[$PWD]", searching "[$MYPATH]"

function derp {
    if [ -e "$MYPATH/.ctrlp_ignore" ]; then
        egrep -v "$(cat "$MYPATH/.ctrlp_ignore" | @ 'inp().strip().replace("\n", "")')"
    else
        cat
    fi;
}
function headthing {
    head -n "$(( $1 - 1 ))"
    log warning "Head #$2 hit limit of $1 lines"
    head -n 1
}
timeout 8 find "$MYPATH" | headthing 500000 early | grep -v "^$MYPATH"'$' | egrep -v "__pycache__|\.pyc$|\.so|htmlcov|\.git|\.class|\.sw.$" | derp
st="${PIPESTATUS[0]}"
if [ "$st" = "124" ]; then
    log warning "timed out"
fi
# | egrep -v "^.*(path1|path2|...).*$"
